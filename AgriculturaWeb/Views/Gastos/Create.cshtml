@model AgriculturaWeb.Models.Gasto

@{
    ViewBag.Title = "Nuevo Gasto";
}

<h2>Registrar Gasto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Categoría</label>
        <select name="IdCategoriaGasto" class="form-control" required>
            <option value="">Seleccione</option>
            @foreach (var cat in ViewBag.Categorias)
            {
                <option value="@cat.IdCategoriaGasto">@cat.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Finca</label>
        <select name="IdFinca" class="form-control">
            <option value="">Seleccione</option>
            @foreach (var finca in ViewBag.Fincas)
            {
                <option value="@finca.IdFinca">@finca.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input type="date" name="Fecha" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Monto (Q)</label>
        <input type="number" step="0.01" name="Monto" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea name="Descripcion" class="form-control" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
