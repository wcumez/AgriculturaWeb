@model IEnumerable<AgriculturaWeb.Models.Gasto>

@{
    ViewBag.Title = "Gastos";
}

<h2>Listado de Gastos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p>
    @Html.ActionLink("Nuevo Gasto", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Finca</th>
            <th>Categoría</th>
            <th>Monto</th>
            <th>Descripción</th>
            <th style="width:100px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@g.Finca</td>
                <td>@g.Categoria</td>
                <td>@String.Format("Q{0:N2}", g.Monto)</td>
                <td>@g.Descripcion</td>
                <td>
                    @Html.ActionLink("✏️", "Edit", new { id = g.IdGasto }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("🗑️", "Delete", new { id = g.IdGasto }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('¿Eliminar este gasto?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
