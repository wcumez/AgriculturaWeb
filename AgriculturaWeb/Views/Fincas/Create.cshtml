@model AgriculturaWeb.Models.Finca
@{
    ViewBag.Title = "Crear Finca";
}

<div class="container mt-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-success fw-bold">
            <i class="fa-solid fa-seedling me-2"></i>Crear Nueva Finca
        </h3>
        <a href="@Url.Action("Index", "Fincas")" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left"></i> Regresar
        </a>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Nombre" class="form-label fw-semibold">Nombre de la Finca</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ej. Finca Las Flores" })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="AreaHa" class="form-label fw-semibold">Área (ha)</label>
                    @Html.TextBoxFor(m => m.AreaHa, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Ej. 10.5" })
                    @Html.ValidationMessageFor(m => m.AreaHa, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label for="Ubicacion" class="form-label fw-semibold">Ubicación</label>
                    @Html.TextBoxFor(m => m.Ubicacion, new { @class = "form-control", placeholder = "Ej. San Marcos, Malacatán" })
                    @Html.ValidationMessageFor(m => m.Ubicacion, "", new { @class = "text-danger" })
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Guardar
                    </button>
                    <a href="@Url.Action("Index", "Fincas")" class="btn btn-outline-secondary ms-2">
                        <i class="fa-solid fa-xmark"></i> Cancelar
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        // animación opcional al cargar
        document.addEventListener('DOMContentLoaded', () => {
            const formCard = document.querySelector('.card');
            formCard.classList.add('animate__animated', 'animate__fadeIn');
        });
    </script>
}
