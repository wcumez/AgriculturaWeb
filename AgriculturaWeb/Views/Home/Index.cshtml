@{
    ViewBag.Title = "Panel de Administración";
}

<h4 class="text-center mb-4">Panel de Administración</h4>

<div class="dashboard-grid">
    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Fincas")'">
        <i class="fa-solid fa-tree"></i>
        <h5>Fincas</h5>
        <p>Gestionar registros de fincas</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Cultivos")'">
        <i class="fa-solid fa-seedling"></i>
        <h5>Cultivos</h5>
        <p>Administrar cultivos y producción</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Siembras")'">
        <i class="fa-solid fa-leaf"></i>
        <h5>Siembras</h5>
        <p>Registrar y consultar siembras</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Empleados")'">
        <i class="fa-solid fa-users"></i>
        <h5>Empleados</h5>
        <p>Gestión de personal</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Ventas")'">
        <i class="fa-solid fa-hand-holding-dollar"></i>
        <h5>Ventas</h5>
        <p>Administrar transacciones</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Gastos")'">
        <i class="fa-solid fa-wallet"></i>
        <h5>Gastos</h5>
        <p>Control de egresos</p>
    </div>

    <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Inventario")'">
        <i class="fa-solid fa-warehouse"></i>
        <h5>Inventario</h5>
        <p>Supervisar stock y existencias</p>
    </div>

    @if (Session["Rol"] != null && Session["Rol"].ToString() == "Administrador")
    {
        <div class="dashboard-card" onclick="location.href='@Url.Action("Index","Usuarios")'">
            <i class="fa-solid fa-users-gear"></i>
            <h5>Usuarios</h5>
            <p>Gestión de cuentas y roles</p>
        </div>
    }
</div>
