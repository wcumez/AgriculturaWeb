@model IEnumerable<AgriculturaWeb.Models.Venta>

@{
    ViewBag.Title = "Ventas";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">@TempData["Mensaje"]</div>
}

<h2>Listado de Ventas</h2>

<p>
    @Html.ActionLink("Nueva Venta", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.IdVenta</td>
                <td>@v.NombreCliente</td>
                <td>@v.Fecha.ToShortDateString()</td>
                <td>@v.Total.ToString("C2")</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = v.IdVenta }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = v.IdVenta }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
