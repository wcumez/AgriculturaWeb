@{
    ViewBag.Title = "Registrar Nueva Venta";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
        <h5><i class="fa-solid fa-cash-register"></i> Nueva Venta</h5>
        <a href="@Url.Action("Index")" class="btn btn-light btn-sm">
            <i class="fa-solid fa-arrow-left"></i> Regresar al listado
        </a>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Create", "Ventas", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="row mb-3">
                <div class="col-md-4">
                    <label>Cliente</label>
                    @Html.DropDownList("IdCliente", new SelectList(ViewBag.Clientes, "IdCliente", "Nombre"), "Seleccione", new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <label>Almacén</label>
                    @Html.DropDownList("IdAlmacen", new SelectList(ViewBag.Almacenes, "IdAlmacen", "Nombre"), "Seleccione", new { @class = "form-control" })
                </div>

                <div class="col-md-4">
                    <label>Producto</label>
                    @Html.DropDownList("IdProducto", new SelectList(ViewBag.Productos, "IdProducto", "Nombre"), "Seleccione", new { @class = "form-control" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label>Cantidad</label>
                    <input type="number" name="Cantidad" id="Cantidad" step="0.01" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label>Precio Unitario (Q)</label>
                    <input type="number" name="PrecioUnitario" id="PrecioUnitario" step="0.01" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label>Total (Q)</label>
                    <input type="text" id="Total" class="form-control" readonly />
                </div>
            </div>

            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fa-solid fa-floppy-disk"></i> Guardar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa-solid fa-xmark"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        const cantidad = document.getElementById("Cantidad");
        const precio = document.getElementById("PrecioUnitario");
        const total = document.getElementById("Total");

        function actualizarTotal() {
            const c = parseFloat(cantidad.value) || 0;
            const p = parseFloat(precio.value) || 0;
            total.value = (c * p).toFixed(2);
        }

        cantidad.addEventListener("input", actualizarTotal);
        precio.addEventListener("input", actualizarTotal);
    </script>
}
