@model IEnumerable<AgriculturaWeb.Models.Usuario>

@{
    ViewBag.Title = "Gestión de Usuarios";
}

<!-- Mensaje de confirmación -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h2><i class="fa-solid fa-users-gear text-success"></i> Usuarios del Sistema</h2>
    @Html.ActionLink("Nuevo Usuario", "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Nombre</th>
            <th>Usuario</th>
            <th>Rol</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No hay usuarios registrados.</td>
            </tr>
        }
        else
        {
            foreach (var u in Model)
            {
                <tr>
                    <td>@u.Nombre</td>
                    <td>@u.NombreUsuario</td>
                    <td>@u.Rol.Nombre</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Usuarios", new { id = u.IdUsuario })" class="btn btn-primary btn-sm me-2">
                            <i class="fa-solid fa-pen-to-square"></i> Editar
                        </a>

                        @using (Html.BeginForm("Delete", "Usuarios", new { id = u.IdUsuario }, FormMethod.Post, new { onsubmit = "return confirm('¿Seguro que desea eliminar al usuario " + u.NombreUsuario + "?');", style = "display:inline" }))
                        {
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
